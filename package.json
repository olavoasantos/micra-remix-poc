{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:*",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./app/index.ts --outfile=build/server.js --bundle --external:bcrypt --external:@mapbox/* --external:pino --alias:~=app --alias:@remix-build=build",
    "dev": "yarn build:remix && yarn build:server && run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "nodemon --ext 'ts,tsx' --ignore '*.d.ts' --delay 2 --exec 'cross-env NODE_ENV=development node ./build/server.js'",
    "lint": "eslint '**/*.{ts,tsx}'",
    "prepare": "husky install .config/husky",
    "db:merge-schema": "vite-node .config/scripts/merge-schema.ts",
    "db:up": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest",
    "test": "vitest run",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^6.0.4",
    "@mantine/hooks": "^6.0.4",
    "@mantine/remix": "^6.0.4",
    "@micra/application": "next",
    "@micra/error": "next",
    "@micra/event-emitter": "next",
    "@prisma/client": "^4.11.0",
    "@remix-run/express": "^1.13.0",
    "@remix-run/node": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@sentry/node": "^7.45.0",
    "@tabler/icons-react": "^2.11.0",
    "argon2": "^0.30.3",
    "bcrypt": "^5.1.0",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "isbot": "^3.6.5",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "pino-sentry-transport": "^1.0.4",
    "prisma": "^4.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-node": "^0.29.7"
  },
  "devDependencies": {
    "@micra/core": "next",
    "@micra/eslint-config": "next",
    "@remix-run/dev": "^1.13.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.2",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/morgan": "^1.9.4",
    "@types/pino": "^7.0.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "c8": "^7.13.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.10",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "engines": {
    "node": ">=14"
  }
}
